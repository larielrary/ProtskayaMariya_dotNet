@model IEnumerable<BusinessLayer.Models.DTO.Inspector>

<table class="table">
    <thead>
        <tr>
            <th>
                Firstname
            </th>
            <th>
                LastName
            </th>
            <th>
                MiddleName
            </th>
            <th>
                Position
            </th>
            <th>
                Salary
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td asp-display-for="@item.Firstname"></td>
            <td asp-display-for="@item.LastName"></td>
            <td asp-display-for="@item.MiddleName"></td>
            <td asp-display-for="@item.Position"></td>
            <td asp-display-for="@item.Salary"></td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>

<p>
    <a asp-action="Create">Create</a>
</p>